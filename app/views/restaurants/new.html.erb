<h1>New restaurant listing</h1>

<%= form_with scope: :restaurant, url: restaurants_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, id: 'name' %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, id: 'description' %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
