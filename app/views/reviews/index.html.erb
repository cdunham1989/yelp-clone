<h1>Here are all the reviews for <%= @restaurant.name %>:</h1>

<table>
  <tr>
    <th>Rating</th>
    <th>Description</th>
    <th>Reviewer</th>
  </tr>

  <% @reviews.each do |review| %>
    <tr>
      <td><%= review.rating %></td>
      <td><%= review.description %></td>
      <td>by <%= review.user.email %></td>
      <td><%= link_to 'Show review', restaurant_review_path(:id => review.id) %></td>
    </tr>
  <% end %>
</table>


<%= link_to 'New review', new_restaurant_review_path %>
