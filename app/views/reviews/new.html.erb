<h1>New Review</h1>

<%= form_with scope: :review, url: restaurant_reviews_path, local: true do |form| %>
  <p>
    <%= form.label :Rating %><br>
    <%= form.text_field :rating, id: 'rating' %>
  </p>

  <p>
    <%= form.label :Description %><br>
    <%= form.text_area :description, id: 'description' %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', restaurant_reviews_path %>
